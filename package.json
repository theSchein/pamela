{
  "name": "pamela",
  "description": "Autonomous prediction market trading agent built on ElizaOS",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "prediction-markets",
    "polymarket",
    "trading",
    "autonomous-agent",
    "elizaos",
    "blockchain",
    "polygon",
    "discord-bot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/theSchein/pamela"
  },
  "license": "MIT",
  "author": "Pamela Trading Agent Contributors",
  "homepage": "https://github.com/theSchein/pamela#readme",
  "bugs": {
    "url": "https://github.com/theSchein/pamela/issues"
  },
  "workspaces": [
    "web",
    "shared"
  ],
  "scripts": {
    "start": "node src/start-with-recovery.mjs",
    "start:original": "elizaos start",
    "start:recovery": "node src/start-with-recovery.mjs",
    "dev": "node src/start-with-recovery.mjs dev",
    "dev:original": "elizaos dev",
    "dev:web": "cd web && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:web\"",
    "build:agent": "tsc --noEmit && tsup",
    "build:web": "cd web && npm run build:web",
    "build": "npm run build:agent",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules dist .eliza",
    "reset:db": "rm -rf .eliza/.elizadb && echo 'Database reset complete'",
    "generate-wallet": "node scripts/generate-wallet.js",
    "wallet:new": "node scripts/generate-wallet.js",
    "wallet:manage": "node scripts/manage-wallets.js",
    "wallets": "node scripts/manage-wallets.js",
    "agent:setup": "./scripts/setup-agent-monorepo.sh",
    "agent:run": "./scripts/run-agent.sh",
    "agent:docker": "./scripts/generate-docker-configs.sh",
    "agent:logs": "./scripts/logs-agent.sh",
    "deploy:all": "./scripts/deploy-all.sh",
    "deploy:stop": "./scripts/stop-all.sh"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.8",
    "@elizaos/cli": "^1.6.1",
    "@elizaos/core": "^1.6.1",
    "@elizaos/plugin-bootstrap": "^1.6.1",
    "@elizaos/plugin-browser": "^1.0.3",
    "@elizaos/plugin-discord": "^1.3.0",
    "@elizaos/plugin-evm": "^1.0.13",
    "@elizaos/plugin-news": "^0.25.6-alpha.1",
    "@elizaos/plugin-ollama": "^1.2.4",
    "@elizaos/plugin-openai": "^1.5.15",
    "@elizaos/plugin-sql": "^1.6.1",
    "@elizaos/plugin-telegram": "^1.0.10",
    "@elizaos/plugin-twitter": "^1.2.21",
    "@elizaos/plugin-web-search": "^0.25.6-alpha.1",
    "@polymarket/clob-client": "^4.16.0",
    "@polymarket/sdk": "^6.0.0",
    "@theschein/plugin-polymarket": "^0.3.0",
    "drizzle-orm": "^0.44.5",
    "ethers": "^6.13.1",
    "express": "^5.1.0",
    "node-fetch": "^3.0.0",
    "ws": "^8.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@elizaos/client": "^1.6.1",
    "@elizaos/server": "^1.6.1",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.2.2",
    "prettier": "3.5.3",
    "tsup": "8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
